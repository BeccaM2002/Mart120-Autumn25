<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Falling Target Game</title>
  <style>
    /* Full-screen canvas container with background image */
    body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      background: url('background.png') no-repeat center center fixed;
      background-size: cover;
    }
    canvas {
      display: block;
    }
  </style>
</head>
<body>
  <!-- Load p5.js library -->
  <script src="https://cdn.jsdelivr.net/npm/p5@1.6.0/lib/p5.min.js"></script>
  <script>
    // --- BEGIN GAME CODE ---

    let flakes = [];
    let flakeCount = 15;

    let hits = 0;
    let misses = 0;
    let gameOver = false;

    let img1X = 100;
    let img1Y = 100;
    let imgSize = 80;

    let img2X = 300;
    let img2Y = 200;

    let costumes = [];
    let currentCostume = 0;

    let targetImg;
    let winImg, loseImg, restartImg;

    let restartX, restartY, restartW, restartH;

    let touchCount = 0;
    let touchedLastFrame = false;

    function preload() {
      // load player costumes
      costumes.push(loadImage("costume1.png"));
      costumes.push(loadImage("costume2.png"));
      costumes.push(loadImage("costume3.png"));

      // load target and win/lose/restart images
      targetImg = loadImage("target.png");
      winImg = loadImage("win.png");
      loseImg = loadImage("lose.png");
      restartImg = loadImage("restart.png");
    }

    function setup() {
      createCanvas(600, 400);

      for (let i = 0; i < flakeCount; i++) {
        flakes.push({
          x: random(0, width - imgSize),
          y: random(-height, 0),
          speed: random(1, 3),
          angle: random(TWO_PI),
          rotateSpeed: random(0.01, 0.05)
        });
      }
    }

    function draw() {
      background(0, 0); // keep transparent to show HTML background

      if (gameOver) {
        drawEndScreen();
        return;
      }

      // --- Player movement ---
      if (keyIsDown(LEFT_ARROW)) img1X -= 3;
      if (keyIsDown(RIGHT_ARROW)) img1X += 3;
      if (keyIsDown(UP_ARROW)) img1Y -= 3;
      if (keyIsDown(DOWN_ARROW)) img1Y += 3;

      // --- Draw player and static target ---
      image(costumes[currentCostume], img1X, img1Y, imgSize, imgSize);
      image(targetImg, img2X, img2Y, imgSize, imgSize);

      // --- Collision with static target ---
      let touching = collideRectRect(
        img1X, img1Y, imgSize, imgSize,
        img2X, img2Y, imgSize, imgSize
      );

      if (touching && !touchedLastFrame) {
        touchCount++;
        if (touchCount % 5 === 0) currentCostume = (currentCostume + 1) % costumes.length;
      }
      touchedLastFrame = touching;

      // --- Display counters ---
      fill(255);
      textSize(24);
      text("Touches: " + touchCount, 20, 30);
      text("Hits: " + hits, 20, 60);
      text("Misses: " + misses, 20, 90);

      // --- Snowflake logic ---
      for (let f of flakes) {
        f.y += f.speed;
        f.angle += f.rotateSpeed;

        if (f.y > height) {
          misses++;
          resetFlake(f);
        }

        if (collideRectRect(img1X, img1Y, imgSize, imgSize, f.x, f.y, imgSize, imgSize)) {
          hits++;
          resetFlake(f);
        }

        push();
        translate(f.x + imgSize / 2, f.y + imgSize / 2);
        rotate(f.angle);
        imageMode(CENTER);
        image(targetImg, 0, 0, imgSize, imgSize);
        pop();
      }

      if (hits >= 30 || misses >= 10) gameOver = true;
    }

    function resetFlake(f) {
      f.y = -imgSize;
      f.x = random(0, width - imgSize);
      f.speed = random(1, 3);
      f.rotateSpeed = random(0.01, 0.05);
      f.angle = random(TWO_PI);
    }

    function drawEndScreen() {
      fill(0, 150);
      rect(0, 0, width, height); // semi-transparent overlay
      imageMode(CENTER);

      if (hits >= 30) image(winImg, width/2, height/2 - 50, 400, 200);
      else image(loseImg, width/2, height/2 - 50, 400, 200);

      restartW = 150;
      restartH = 70;
      restartX = width/2;
      restartY = height/2 + 150;
      image(restartImg, restartX, restartY, restartW, restartH);

      textAlign(CENTER, CENTER);
      textSize(24);
      fill(255);
      text("Click the button to play again", width/2, height/2 + 220);
    }

    function mousePressed() {
      if (gameOver) {
        if (
          mouseX > restartX - restartW/2 &&
          mouseX < restartX + restartW/2 &&
          mouseY > restartY - restartH/2 &&
          mouseY < restartY + restartH/2
        ) restartGame();
      }
    }

    function restartGame() {
      hits = 0; misses = 0; touchCount = 0; gameOver = false; currentCostume = 0;
      img1X = 100; img1Y = 100;

      for (let f of flakes) {
        f.y = random(-height, 0);
        f.x = random(0, width - imgSize);
        f.speed = random(1, 3);
        f.angle = random(TWO_PI);
        f.rotateSpeed = random(0.01, 0.05);
      }
    }

    function collideRectRect(x1,y1,w1,h1,x2,y2,w2,h2) {
      return x1 < x2+w2 && x1+w1 > x2 && y1 < y2+h2 && y1+h1 > y2;
    }

    // --- END GAME CODE ---
  </script>
</body>
</html>
